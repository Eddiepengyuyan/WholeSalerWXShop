.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* ---------------------------- */
/*模态框*/
.modal{
  position:fixed;
  top:0; 
  right:0; 
  bottom:0; 
  left:0; 
  z-index:1000;
}
.modal-cancel{
  position:absolute; 
  z-index:2000; 
  top:0; 
  right:0; 
  bottom: 0; 
  left:0; 
  background:rgba(0,0,0,0.3);
}
.bottom-dialog-body{
  width:100%; 
  position:absolute; 
  z-index:3000; 
  bottom:0; 
  left:0;
  background:#dfdede;
}
/*动画前初始位置*/
.bottom-positon{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
}

/* 底部弹出框 */
.bottom-positon{
  text-align: center;
}
